<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.gmapapplication.RegisterActivity">

    <TextView
        android:text="登録する内容を入力してください"
        android:id="@+id/title_text"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_text"
        android:textSize="18dp"
        android:layout_marginTop="28dp"
        android:text="場所名(会社名)など"
        android:layout_below="@+id/title_text"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/name_edit"
        android:textSize="30dp"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/name_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addr_text"
        android:textSize="18dp"
        android:text="住所"
        android:layout_below="@+id/name_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/addr_edit"
        android:textSize="30dp"
        android:inputType="text"
        android:layout_below="@+id/name_edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tel_text"
        android:textSize="18dp"
        android:text="電話番号"
        android:layout_below="@+id/addr_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/tel_edit"
        android:textSize="30dp"
        android:inputType="text"
        android:layout_below="@+id/addr_edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day_text"
        android:textSize="18dp"
        android:text="登録日時"
        android:layout_below="@+id/tel_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/day_edit"
        android:textSize="30dp"
        android:inputType="text"
        android:layout_below="@+id/tel_edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etc_text"
        android:textSize="18dp"
        android:text="備考"
        android:layout_below="@+id/day_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/etc_edit"
        android:textSize="30dp"
        android:inputType="text"
        android:layout_below="@+id/etc_text"
        android:layout_toStartOf="@+id/cancel_button" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="register"
        android:textSize="22dp"
        android:id="@+id/regi_button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/title_text" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:textSize="22dp"
        android:id="@+id/cancel_button"
        android:layout_below="@+id/etc_edit"
        android:layout_alignParentEnd="true" />
</RelativeLayout>